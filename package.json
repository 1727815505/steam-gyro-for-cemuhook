{
  "name": "steam-gyro-for-cemuhook",
  "description": "App to add Steam Controller's motion support to Cemuhook",
  "authors": "FrogTheFrog",
  "version": "1.0.5",
  "main": "./dist/main.bundle.js",
  "author": {
    "name": "FrogTheFrog",
    "url": "https://github.com/FrogTheFrog",
    "email": "warliukz@gmail.com"
  },
  "repository": {
    "url": "https://github.com/FrogTheFrog/steam-gyro-for-cemuhook"
  },
  "build": {
    "appId": "FrogTheFrog.SteamGyroForCemuhook",
    "productName": "Steam Gyro For Cemuhook",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "./assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "./node_modules/.bin/electron-rebuild",
    "start": "./node_modules/.bin/electron ./dist/main.bundle.js",
    "watch": "webpack --watch",
    "build": "cross-env NODE_ENV=production webpack",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "build:dist": "rimraf dist && npm run build",
    "build:win": "build --win --x64"
  },
  "dependencies": {
    "ajv": "^5.2.4",
    "crc": "^3.5.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.4",
    "long": "^3.2.0",
    "microtime": "^2.1.6",
    "node-hid": "^0.5.7",
    "random-js": "^1.0.8",
    "random-mac": "0.0.4",
    "strip-bom": "^3.0.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/crc": "^3.4.0",
    "@types/fs-extra": "^4.0.2",
    "@types/lodash": "^4.14.78",
    "@types/long": "^3.0.32",
    "@types/microtime": "^2.1.0",
    "@types/node": "^8.0.46",
    "@types/node-hid": "^0.5.2",
    "@types/random-js": "^1.0.30",
    "@types/winston": "^2.3.6",
    "awesome-typescript-loader": "^3.2.3",
    "cross-env": "^5.1.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.37.2",
    "electron-rebuild": "^1.6.0",
    "file-loader": "^1.1.5",
    "rimraf": "^2.6.2",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
